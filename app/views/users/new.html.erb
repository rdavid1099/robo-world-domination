<h1>Create Robo World Account</h1>
<%= render partial: 'shared/flash' %>
<%= form_for(@user) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br><br>

  <%= f.label :birthday %><br>
  <%= f.date_field :birthday %><br><br>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation, "Confirm Password" %><br>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit "Sign Up" %>
<% end %>
